pipeline {
    agent any

    environment {
        IMAGE_NAME = "apkerigz/devops"
        IMAGE_TAG = 'v.0.0.44'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'exam', url: 'https://github.com/Roma-uuu/codeby-devops.git'
            }
        }
        stage('Build') {
            steps {
                dir('exam/src') {
                    sh 'mvn clean package'
                }
            }
        }
        stage('Test Docker Access') {
            steps {
                sh 'docker info'
            }
        }
        stage('Build and Push Docker Image') {
            steps {
                dir('exam/src') {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_TOKEN')]) {
                        sh """
                        echo \$DOCKERHUB_TOKEN | docker login -u \$DOCKERHUB_USERNAME --password-stdin
                        docker build -t \$IMAGE_NAME:\$IMAGE_TAG .
                        docker push \$IMAGE_NAME:\$IMAGE_TAG
                        """
                    }
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                // Если файлы Kubernetes находятся в 'exam/k8s', измените путь
                sh '''
                kubectl apply -f exam/k8s/deployment.yaml
                kubectl apply -f exam/k8s/service.yaml
                '''
            }
        }
    }
}
