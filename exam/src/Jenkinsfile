pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'exam', url: 'https://github.com/Roma-uuu/codeby-devops.git'
            }
        }
        stage('Build') {
            steps {
                dir('exam/src') {
                    sh 'mvn clean package -Dcheckstyle.skip=true'
                }
            }
        }
        stage('Test Docker Access') {
            steps {
                sh 'docker info'
            }
        }
        stage('Build and Push Docker Image') {
            steps {
                dir('exam/src') {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_TOKEN')]) {
                        sh '''
                        echo $DOCKERHUB_TOKEN | docker login -u $DOCKERHUB_USERNAME --password-stdin
                        docker build -t apkerigz/devops:v.0.0.44 . 
                        docker push apkerigz/devops:v.0.0.44
                        '''
                    }
                }
            }
        }
        stage('Verify Files') {
            steps {
                sh 'ls -la exam/src/k8s/'
            }
        }
        stage('Check kubectl') {
            steps {
                sh 'which kubectl || echo "kubectl not found"'
                sh 'kubectl version --client || echo "kubectl not available"'
            }
        }
        stage('Test Kubernetes Connection') {
            steps {
                // Используем учетные данные Kubernetes через сервисный аккаунт
                withCredentials([string(credentialsId: 'k8s-sa-token', variable: 'K8S_TOKEN')]) {
                    sh '''
                    kubectl cluster-info --token=$K8S_TOKEN
                    '''
                }
            }
        }
        stage('Deploy using Helm') {
            steps {
                withCredentials([string(credentialsId: 'k8s-sa-token', variable: 'K8S_TOKEN')]) {
                    dir('exam/src/mychart') {  // Путь к Helm чарту
                        sh '''
                        helm upgrade --install devops-app . \
                            --set image.tag=v.0.0.44 \
                            --kube-token=$K8S_TOKEN
                        '''
                    }
                }
            }
        }
    }
}
